<div id="order" class="container">
  <h1 class="title has-text-centered">Order Summeraydadadada</h1>

  <div class="table-container">
    <table class="table has-text-centered is-bordered is-striped">
      <tr>
        <th>Movie Something</th>
        <th>Price</th>
      </tr>
        <tr>
          <td><%= @order.total %></td>
